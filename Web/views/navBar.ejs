<script>
    $(document).ready(function(){
        var url = window.location.href;
        var matches = url.match(/(?<!\/\/)\/\w+/g);
        var words = matches.map(function(match) {
            return match.substring(1);
        });

        var acum = "";
        for(var i = 1; i < words.length; i++){
            if(i == (words.length - 1)){
                $("#migaDePan").append('<li class="breadcrumb-item active" aria-current="page">' + words[i].charAt(0).toUpperCase() + words[i].substring(1) + '</li>');
            }
            else{
                acum += "/" + words[i];
                $("#migaDePan").append('<li class="breadcrumb-item"><a href="'+ acum +'">' + words[i].charAt(0).toUpperCase() + words[i].substring(1) + '</a></li>');
            }
        }

        $("#buttonEditarDatos").on("click", function(){
            fetch("/getUserName")
            .then(response => response.json())
            .then(data => {
                $("#formUsuario").val(data.nombre);
            });
        });

        $("#buttonGuardar").on("click", function(){
            var formData ={
                usuario : $("#formUsuario").val(),
                contrasenia : $("#formContrasenia").val()
            };

            $("#formContrasenia").val("");
            $("#formContrasenia2").val("");
            
            $.ajax({
                type: 'POST',
                url: '/profesor/editarDatos',
                data: formData,
                success: function(response) {
                    $('#editarDatos').modal('hide');
                },
                error: function() {
                    $('#bodyModalEditarDatos').append('<div class="alert alert-danger mt-3" role="alert">'+
                        'No se han podido actualizar los datos'+
                    '</div>');
                }
            });
        });
    });
</script>