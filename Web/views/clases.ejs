<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("header", {titulo : "Clases"}) %>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col text-center mt-5">
                <h2>Sesiones</h2>
            </div>
        </div>
        <div class="row justify-content-center mt-4">
            <% institutos.forEach(i => { %>
                <div class="col-sm-6 mb-3 mb-sm-0">
                    <div class="card">
                        <div class="card-body">
                            <div class = "container-fluid">
                                <div class="row justify-content-between">
                                    <div class="col">
                                        <h5><%= i.nombre %></h5>
                                    </div>
                                    <div class="col">
                                        <% if(i.jugadores){ %>
                                        <h6>Participantes: <%= i.jugadores %></h6>
                                        <% } else {%>
                                            <i>Entrar para ver resultados</i>
                                        <% } %>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <a href="/profesor/generarDatos/<%= i.id %>" class="btn btn-primary">
                                            <% if(i.jugadores){ %>
                                                Ver resultados sesión
                                            <% } else {%>
                                                Analizar Sesión
                                            <% } %>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>