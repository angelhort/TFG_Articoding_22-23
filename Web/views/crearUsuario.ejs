<!DOCTYPE html>
<html lang="en">
    
    <head>
        <%- include("header", {titulo : "CrearUsuario"}) %>
    </head>

    <body>
        <%- include("adminBar") %>
        
        <div class="container-fluid h-100">
           
            <div class="row h-100">
                <div class="col-12 col-md-6 d-flex flex-column align-items-center justify-content-start mt-5">
                    
                    <form id="form_login" method="POST" action="/admin/cuentas/nuevoUsuario" >
                        <% if (mostrarMensaje) { %>
                            <div class=" mb-3 alert alert-warning text-center align-self-start" role="alert">
                                <%= mensaje %>
                            </div>
                        <% } %>
                        <div class="mt-5 mb-3 align-self-start">
                            <h1>Nuevo Usuario</h1>
                        </div>
                        <div class="form-group">
                            <h5 class="p-0 custom-label">Rol</h5>
                            <select class="form-select" name="rol" id="formInstituto" aria-label="Profesor">
                                <option value="profesor">profesor</option>
                                <option value="admin">admin</option>
                            </select>
                            <small id="rolHelp" class="form-text text-muted">Seleccione el rol del usuario</small>
                        </div>
                        <div class="form-group mt-3 mb-3">
                            <h5 class="p-0 custom-label">Usuario</h5>
                            <input type="text" class="form-control" name="usuario" id="formUsuario" placeholder="Nuevo usuario" aria-label="Username"/>
                        </div>
                        <div class="form-group mt-3 mb-3">
                            <h5 class="p-0 custom-label">Contrase√±a</h5>
                            <input type="password" class="form-control" name="contrasenia" id="formContrasenia" placeholder="**********"/>
                        </div>
                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-primary" value="Crear Cuenta">Aceptar</button>
                        </div>
                       
                    </form>
                </div>
                <div class="col-6 backgroundColor3 d-none d-md-block">
                    
                </div>
            </div>
        </div>
            
    </body>
</html>

    
